            <stroke android:width="2dp"
                android:color="@color/colorNotePink"/>
        </shape>
    </item>

    <item
        android:bottom="6dp"
        android:top="6dp"
        android:right="6dp"
        android:left="6dp">

        <shape android:shape="oval">
            <stroke
